<div id='user-name-div' class='signupQuery col-4 m-5'>


    <form id='user-name-form' class='d-flex flex-column justify-content-center align-items-center'>
        <h2 class='text-center m-3'> Please enter your first and last name.</h2>
        <label for='user-firstname'> First Name:</label>
        <input class="form-control col-2 p-2 m-2" name='user-firstname' id='user-firstname' placeholder='Enter first name...'>
        <label for='user-lastname'> Last Name:</label>
        <input class="form-control p-2 m-2" name='user-lastname' id='user-lastname' placeholder='Enter last name...'>
        <button type="submit" class="d-flex p-3 m-3 btn btn-primary">Submit</button>
    </form>
</div>
<div id='user-about-div' class='d-none signupQuery m-5 col-6 d-flex flex-column justify-content-center align-items-center'>

    <h2> Tell us about yourself.</h2>


    <form id='user-about-form' class='row align-items-center'>
        <div class='row'>
            <label for='user-age'>What is your age?</label>
            {{!-- <input type='range' name='user-age' id='user-age' min='18' max='100' /> --}}
            <input type="text"  class="form-control d-inline-flex" name='user-age' id='user-age' placeholder='Age'>
        </div>
{{!-- class="visually-hidden" --}}
        <label  for='user-gender'>Select gender</label>

        <select class="form-control form-select" requiredname='user-gender' id='user-gender' placeholder='Gender Options'>
            <option disabled selected hidden value="">---</option>
            <option value="m">Male</option>
            <option value="f">Female</option>
            <option value="o">Non Binary</option>
        </select>

