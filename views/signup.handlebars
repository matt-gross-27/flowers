        <label for='user-bio'> About you:</label>
        <textarea class="form-control" id='user-bio' placeholder='About you'></textarea>

        <label for='user-photo-url'>Enter a photo url</label>
        <input class="form-control" type="text" name="user-photo-url" id="user-photo-url" placeholder='Must be a url for a photo' />

        <button class="d-flex p-3 m-3 btn btn-primary" type="submit">Submit</button>
    </form>

</div>
<div id='user-signup-div' class='d-none signupQuery form-control'>
    <h2> Signup </h2>

    <form id='user-signup-form' >
        <label for='user-email'> Email:</label>
        <input name='user-email' id='user-email' placeholder='E-mail address'>
        <label for='user-password'> Password:</label>
        <input name='user-password' id='user-password' placeholder='Password Must Be ≥ 8 characters'>
        <button class="d-flex p-3 m-3 btn btn-primary" type="submit">Submit</button>
    </form>
</div>
