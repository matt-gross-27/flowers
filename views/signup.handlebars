<div id='user-name-div' class='signupQuery'>

    <h2> Please enter your first and last name.</h2>

    <form id='user-name-form'>
        <label for='user-firstname'> First Name:</label>
        <input name='user-fistname' id='user-firstname' placeholder='First name'>
        <label for='user-lastname'> Last Name:</label>
        <input name='user-lastname'id='user-lastname'placeholder='Last name'>
            <button type="submit">Submit</button>
    </form>
</div>
<div id='user-about-div' class='d-none signupQuery'>

    <h2> Tell us about yourself.</h2>

    <form id='user-about-form'>
        <label for='user-age'>What is your age:</label>
        <input name='user-age'id='user-age'placeholder='Age'>
            <label for='user-gender'>Select gender</label>

            <select requiredname='user-gender' id='user-gender'>
                <option disabled selceted hidden value="">gender options</option>
                <option value="m">Male</option>
                <option value="f">Female</option>
                <option value="o">Non Binary</option>
            </select>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="gender" value="male" id="male">
                <label class="form-check-label" for="male">
                    Male
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="gender" value="female" id="female">
                <label class="form-check-label" for="female">
                    Female
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="gender" value="non-binary" id="non-binary">
                <label class="form-check-label" for="non-binary">
                    Non-binary
                </label>
            </div>

            <label for='user-bio'> About you:</label>
            <textarea id='user-bio' placeholder='About you'></textarea>

            <label for='user-photo-url'>Enter a photo url</label>
            <input type="text" name="user-photo-url" id="user-photo-url" placeholder='Must be a url for a photo' />

            <button type="submit">Submit</button>
    </form>

</div>
<div id='user-signup-div' class='d-none signupQuery'>
    <h2> Signup </h2>

    <form id='user-signup-form'>
        <label for='user-email'> Email:</label>
        <input name='user-email' id='user-email' placeholder='E-mail address'>
        <label for='user-password'> Password:</label>
        <input name='user-password'id='user-password' placeholder='Password Must Be ≥ 8 characters'>
            <button type="submit">Submit</button>
    </form>
</div>
<script src="/js/signup.js"></script>

